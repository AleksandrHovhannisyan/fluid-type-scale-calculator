    "lint-staged": "^10.4.0",
    "netlify-cli": "^8.5.0",
    "next-sitemap": "^2.5.14",
    "npm-run-all": "^4.1.5",
    "outdent": "^0.8.0",
    "prettier": "^2.5.0",
    "sass": "^1.43.5",
    "stylelint": "^14.1.0",
    "stylelint-config-standard-scss": "^3.0.0",
    "typescript": "5.0.4"
  },
  "browserslist": [
    "last 2 chrome versions",
    "last 3 safari versions",
    "last 2 firefox versions",
    "last 2 edge versions"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-checkout": "yarn"
    }
  },
  "lint-staged": {
    "*.ts": "yarn run lint:ts:fix",
    "*.scss": "yarn run lint:css:fix"
  },
