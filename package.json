{
  "name": "fluid-type-scale-calculator",
  "description": "Generate fluid typography variables with a modular type scale.",
  "version": "1.0.2",
  "license": "MIT",
  "author": "AleksandrHovhannisyan",
  "scripts": {
    "clean": "rimraf _site",
    "debug:html": "cross-env DEBUG=Eleventy* ELEVENTY_ENV=development npx slinkity --serve --incremental --port=8080",
    "dev": "cross-env ELEVENTY_ENV=development npx slinkity --serve --incremental --port=8080",
    "serve": "cross-env ELEVENTY_ENV=production npx slinkity && npx serve _site",
    "build": "cross-env ELEVENTY_ENV=production npx slinkity",
    "lint": "npm-run-all lint:*",
    "lint:fix": "npm-run-all --parallel lint:*:fix",
    "lint:css": "stylelint \"src/**/*.scss\"",
    "lint:css:fix": "stylelint --fix \"src/**/*.scss\"",
    "lint:js": "eslint --cache \"**/*.js?(x)\"",
    "lint:js:fix": "eslint --cache --fix \"**/*.js?(x)\""
  },
  "devDependencies": {
    "@11ty/eleventy": "^1.0.0-beta.8",
    "@11ty/eleventy-cache-assets": "^2.3.0",
    "@11ty/eleventy-img": "^1.0.0",
    "@11ty/eleventy-upgrade-help": "^1.0.1",
    "autoprefixer": "^10.4.1",
    "cross-env": "^7.0.3",
    "esbuild": "^0.14.8",
    "eslint": "^8.3.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0",
    "netlify-cli": "^8.5.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.0",
    "rimraf": "^3.0.2",
    "sass": "^1.43.5",
    "simple-icons": "^6.3.0",
    "slinkity": "^0.4.4",
    "slugify": "^1.6.3",
    "stylelint": "^14.1.0",
    "stylelint-config-standard-scss": "^3.0.0",
    "vite": "^2.7.9"
  },
  "browserslist": [
    "last 2 chrome versions or last 3 safari versions or last 2 firefox versions or last 2 edge versions"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-checkout": "yarn"
    }
  },
  "lint-staged": {
    "*.js": "yarn run lint:js:fix",
    "*.scss": "yarn run lint:css:fix"
  },
  "dependencies": {
    "clsx": "^1.1.1",
    "lodash": "^4.17.21",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  }
}
