    "@types/node": "17.0.23",
    "@types/react": "18.2.0",
    "@types/react-dom": "18.2.1",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "autoprefixer": "^10.4.4",
    "babel-jest": "^27.5.1",
    "csstype": "^3.0.11",
    "eslint": "^8.12.0",
    "eslint-config-next": "12.1.1",
